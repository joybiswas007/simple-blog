<%- include('partials/header'); %>

<div class="home-nav">
    <a href="/home">Home</a>
    <a href="/logout">Logout</a>
    <a href="/compose">Compose</a>
  </div>

<% posts.forEach(function(post){ %>
<h1><%=post.title %></h1>
<p>
  <%= post.content.substring(0, 100) + "..."; %>
  <a href="/posts/<%=post.id%>">
    Read more
</a>
</p>
<a href="/post/edit/<%= post._id %>" class="edit-button">Edit</a>

<form action="/post/delete/<%= post._id %>" method="POST">
  <button type="submit" class="delete-button" onclick="alert('Are you sure sure you want to delete?')">Delete</button>
</form>
<% }) %> 
<%- include('partials/footer'); %>